Git (все команды отдаются из директории проекта)
<!-- создать проект с нуля --> 
git init         <!-- инициализация пустого репозитория --> 
git config --global user.name "Erick Aytkulov"        <!-- конфигурация гита -->
git config --global user.email "e.aytkulov@gmail.com" <!-- конфигурация гита -->
<!-- конфигурация гита для отдельного проекта: без параметра --global -->
<!-- git config user. -->
    <!-- создать файл .gitignore -->
	<!-- если директория не пустая:-->
git add .									<!-- добавить все в репозиторий -->
git add LICENSE								<!--опционально. пока не знаю зачем -->
git commit -m "initial project version"		<!-- коммит -->
    <!-- создать репозиторий на гитхабе -->
		<!-- добавляем ссылку на удаленный репозиторий -->
git remote add origin https://github.com/ErickAi/[project_name].git
		<!-- залить основную ветку проекта на репозиторий -->         
git push -u origin master
<!-- залить проект с гитхаба -->
git clone https://github.com/[path]/

